    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyCustomTheme" >
        <activity
            android:name="com.modSys.activity.Splashscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.modSys.activity.MainActivity" />
        <activity android:name="com.modSys.activity.RegistrerActivity" />
        <activity
            android:name="com.modSys.activity.ServiceActivity"
            android:icon="@drawable/ic_services"
            android:label="@string/service" />
        <activity
            android:name="com.modSys.activity.FriendListActivity"
            android:icon="@drawable/imageprofil"
            android:label="@string/profil" />
        <activity
            android:name="com.modSys.activity.ProfilActivity"
            android:icon="@drawable/imageprofil"
            android:label="@string/profil" />
        <activity
            android:name="com.modSys.activity.ReminemePage1" />
        <activity
            android:name="com.modSys.activity.ReminemePage2" />
        <activity
            android:name="com.modSys.activity.ReminemePage3" />
        <activity
            android:name="com.modSys.activity.SettingActivity"
            android:icon="@drawable/imagesettings"
            android:label="@string/setting" />
        <activity android:name="com.modSys.activity.NextActivity" />
        <activity
            android:name="com.modSys.activity.ReminemeActivity"
            android:icon="@drawable/ic_remine"
            android:label="@string/reminemeIremieyou"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.modSys.activity.GroupActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity android:name="com.modSys.activity.ResetPassword" />
    </application>

</manifest>